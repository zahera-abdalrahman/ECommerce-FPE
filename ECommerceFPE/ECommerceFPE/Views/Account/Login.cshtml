@model ECommerceFPE.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr />
<div class="row justify-content-center pb-xl-5">
    <div class="col-md-6">
        <form asp-action="Login" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check pt-1">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RemmberMe" /> @Html.DisplayNameFor(model => model.RemmberMe)
                </label>
            </div>

            <div class="pt-3 m-2 pb-xl-5 d-flex justify-content-evenly">
                <input type="submit" value="Login" class="btn btn-primary btn-md btn-block" />
                <a asp-action="Register" asp-controller="Account" class="btn btn-info btn-md btn-block">Register</a>        
                <a asp-action="Index" asp-controller="Home" class="btn btn-warning btn-md btn-block">Cancel</a>
            </div>
        </form>
    </div>
</div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
