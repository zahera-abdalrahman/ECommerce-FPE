@model ECommerceFPE.Models.ViewModels.DeleteRoleViewModel

@{
    ViewData["Title"] = "DeleteRole";
}

<h1 style="margin-top:150px">Delete Role</h1>

<h3>Are you sure you want to delete @Model.RoleName Role?</h3>
<form asp-action="DeleteRole" method="post">
    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RoleName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RoleName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RoleId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RoleId)
            </dd>
        </dl>


        <div class="align-text-bottom w-25">
            @Html.HiddenFor(x=>x.RoleId)
            <input type="submit" value="Delete" class="btn btn-primary btn-md btn-block" />
            <a asp-action="RolesList" asp-controller="Account" class="btn btn-warning btn-md btn-block">Cancel</a>
        </div>

    </div>
</form>
