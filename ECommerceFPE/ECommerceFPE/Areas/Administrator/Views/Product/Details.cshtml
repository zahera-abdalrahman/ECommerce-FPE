@model ECommerceFPE.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="pagetitle">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Home</a></li>
                        <a class="breadcrumb-item" asp-action="Index" asp-controller="Product">Product </a>
                        <a class="breadcrumb-item active" asp-action="Details" asp-controller="ProductCategory">Create</a>
                    </ol>
                </nav>
            </div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.QuantityInStock)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.QuantityInStock)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DiscountPercent)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DiscountPercent)
                </dd>
            </dl>
        </div>
        <div class="form-group text-end m-3">
            <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-sm font-sm rounded btn-brand">Edit</a> 
            <a asp-action="Index" class="btn btn-sm font-sm rounded btn-brand">Back to List</a>
        </div>
    </div>
</div>
