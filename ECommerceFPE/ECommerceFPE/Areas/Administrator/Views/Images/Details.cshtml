@model ECommerceFPE.Models.Images

@{
    ViewData["Title"] = "Details";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="pagetitle">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Home</a></li>
                        <a class="breadcrumb-item" asp-action="Index" asp-controller="Product">Product </a>
                        <a class="breadcrumb-item active" asp-action="Details" asp-controller="ProductCategory">Create</a>
                    </ol>
                </nav>
            </div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MainImageUrl)
                </dt>
                <dd class="col-sm-10">
                    <img src="~/main/@Model.MainImageUrl" style="width:60px">
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MainImageUrl1)
                </dt>
                <dd class="col-sm-10">
                    <img src="~/img1/@Model.MainImageUrl1" style="width:60px">
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MainImageUrl2)
                </dt>
                <dd class="col-sm-10">
                    <img src="~/img2/@Model.MainImageUrl2" style="width:60px">
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MainImageUrl3)
                </dt>
                <dd class="col-sm-10">
                    <img src="~/img3/@Model.MainImageUrl3" style="width:60px">
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ImageOrder)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImageOrder)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ProductCatalog)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductCatalog.Description)
                </dd>
            </dl>
        </div>
        <div class="form-group text-end m-3">
            <a asp-action="Edit" asp-route-id="@Model?.ImageId" class="btn btn-sm font-sm rounded btn-brand">Edit</a> 
            <a asp-action="Index" class="btn btn-sm font-sm rounded btn-brand">Back to List</a>
        </div>
    </div>
</div>