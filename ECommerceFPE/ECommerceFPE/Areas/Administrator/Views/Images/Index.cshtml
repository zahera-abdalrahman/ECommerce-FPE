@model IEnumerable<ECommerceFPE.Models.Images>

@{
    ViewData["Title"] = "Index";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    <div class="pagetitle">
                        <nav>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Home</a></li>
                                <a class="breadcrumb-item" asp-action="Index" asp-controller="Images">Products Images</a>
                            </ol>
                        </nav>
                    </div>
                    <p class="text-end">
                        <a asp-action="Create" class="btn btn-primary btn-sm rounded">Create New</a>
                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.MainImageUrl)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MainImageUrl1)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MainImageUrl2)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MainImageUrl3)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageOrder)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductCatalog)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/main/@item.MainImageUrl" style="width:60px">
                                    </td>
                                    <td>
                                        <img src="~/img1/@item.MainImageUrl1" style="width:60px">
                                    </td>
                                    <td>
                                        <img src="~/img2/@item.MainImageUrl2" style="width:60px">
                                    </td>
                                    <td>
                                        <img src="~/img3/@item.MainImageUrl3" style="width:60px">
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ImageOrder)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductCatalog.ProductName)
                                    </td>
                                    <td>
                                        <div class="text-end">
                                            <a asp-action="Edit" asp-route-id="@item.ImageId" class="btn btn-sm font-sm rounded btn-brand"><i class="material-icons md-edit"></i>Edit</a>
                                            <a asp-action="Details" asp-route-id="@item.ImageId" class="btn btn-sm font-sm rounded btn-brand">Details</a>
                                            <a asp-action="Delete" asp-route-id="@item.ImageId" class="btn btn-sm font-sm rounded btn-brand"><i class="material-icons md-delete_forever"></i>Delete</a>
                                        </div>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>