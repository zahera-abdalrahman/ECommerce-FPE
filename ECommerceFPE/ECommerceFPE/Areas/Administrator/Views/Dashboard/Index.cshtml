@model IEnumerable<ECommerceFPE.Models.Order>

@{
    ViewData["Title"] = "Index";
}
<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Dashboard </h2>
            <p>Whole data about your business here</p>
        </div>
     
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-primary-light"><i class="text-primary material-icons md-monetization_on"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Categories</h6>
                        <span>@ViewBag.CategoryCount</span>
                    </div>
                </article>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-warning-light"><i class="text-warning material-icons md-qr_code"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Products</h6> <span>@ViewBag.ProductCount</span>
                    </div>
                </article>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-success-light"><i class="text-success material-icons md-local_shipping"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Orders</h6> <span>@ViewBag.OrderCount</span>
                    </div>
                </article>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card card-body mb-4">
                <article class="icontext">
                    <span class="icon icon-sm rounded-circle bg-info-light"><i class="text-info material-icons md-shopping_basket"></i></span>
                    <div class="text">
                        <h6 class="mb-1 card-title">Monthly Earning</h6> <span>$@ViewBag.TotalForCurrentMonth</span>
                    </div>
                </article>
            </div>
        </div>
    </div>
    <div class="card mb-4">
        <header class="card-header">
            <h4 class="card-title">Latest orders</h4>
        </header>
        <div class="card-body">
            <div class="table-responsive">
                <div class="table-responsive">
                    <table class="table align-middle table-nowrap mb-0">
                        <thead class="table-light">
                            <tr>


                                <th class="align-middle" scope="col">@Html.DisplayNameFor(x=>x.ApplicationUser.UserName)</th>
                                <th class="align-middle" scope="col">@Html.DisplayNameFor(x=>x.OrderDate)</th>
                                <th class="align-middle" scope="col">@Html.DisplayNameFor(x=>x.TotalAmount)</th>
                                <th class="align-middle" scope="col">@Html.DisplayNameFor(x => x.OrderStatus)</th>
                                <th class="align-middle" scope="col" asp-action="Details" asp-controller="Orders" asp-area="Administrator">View Details</th>
                            </tr>
                        </thead>
                        <tbody>
                             @foreach (var item in Model)
                            {
                            <tr>
                                    <td>@item.ApplicationUser.UserName</td>
                                <td>
                                        @item.OrderDate
                                </td>
                                <td>
                                        @item.TotalAmount
                                </td>
                                <td>
                                        <span class="badge badge-pill badge-soft-success">@item.OrderStatus</span>
                                </td>
                                
                                <td>
                                        <a class="btn btn-xs" asp-action="Details" asp-route-id="@item.OrderId"> View details</a>
                                </td>
                            </tr>
                            }

                         
                        </tbody>
                    </table>
                </div>
            </div> <!-- table-responsive end// -->
        </div>
    </div>
   
</section> <!-- content-main end// -->
