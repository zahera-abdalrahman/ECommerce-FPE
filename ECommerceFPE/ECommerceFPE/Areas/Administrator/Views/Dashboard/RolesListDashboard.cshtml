@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "RolesList";
}

<h1>Roles List</h1>
<a asp-action="CreateRoleDashboard" asp-controller="Dashboard" asp-area="Administrator" class="btn btn-success mb-3">Craete Role</a>


@foreach (var role in Model)
{


    <div class="card mb-4">
        <div class="card-header">Role</div>
        <div class="card-body"><h3>@role.Name</h3></div>
        <div class="card-footer">
            <a asp-route-id="@role.Id" asp-action="EditRoleDashboard" asp-controller="Dashboard" asp-area="Administrator" class="btn btn-warning">Edit</a>
            <a asp-route-id="@role.Id" asp-action="DeleteRoleDashboard" asp-controller="Dashboard" asp-area="Administrator" class="btn btn-danger">Delete</a>


