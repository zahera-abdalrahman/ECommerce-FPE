@model ECommerceFPE.Models.ViewModels.CreateRoleViewModel

@{
    ViewData["Title"] = "CreateRole";
}
<h1>Create Role</h1>

<hr />
<div class="row ">
    <div class="col-md-4" style="margin-top:30px; margin-bottom:200px;">
        <form asp-action="CreateRoleDashboard" asp-controller="Dashboard" asp-area="Administrator">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" >
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="align-text-bottom mt-3 mb-xxl-5">
                <input type="submit" value="Create" class="btn btn-primary btn-md btn-block" />
                <a asp-action="RolesListDashboard" asp-controller="Dashboard" asp-area="Administrator" class="btn btn-warning btn-md btn-block">Cancel</a>
            </div>
        </form>
    </div>
</div>



