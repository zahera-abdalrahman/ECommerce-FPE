@model ECommerceFPE.Models.ViewModels.CategoryModel

@{
    ViewData["Title"] = "Edit";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="pagetitle">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Home</a></li>
                        <a class="breadcrumb-item" asp-action="Index" asp-controller="ProductCategory">Product Category</a>
                        <a class="breadcrumb-item active" asp-action="Update" asp-controller="ProductCategory">Update</a>
                    </ol>
                </nav>
            </div>

            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryId" />
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl" class="control-label"></label>
                    <input asp-for="File" class="form-control" type="file" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="hidden" asp-for="ImageUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <img src="~/img3/@Model.ImageUrl" style="max-width:50px;" />
                </div>
                <div class="form-group text-end mt-3">
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

