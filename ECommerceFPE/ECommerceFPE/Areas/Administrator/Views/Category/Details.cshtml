@model ECommerceFPE.Models.Category

@{
    ViewData["Title"] = "Details";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="pagetitle">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Home</a></li>
                        <a class="breadcrumb-item" asp-action="Index" asp-controller="ProductCategory">Product Category</a>
                        <a class="breadcrumb-item active" asp-action="Details" asp-controller="ProductCategory">Create</a>
                    </ol>
                </nav>
            </div>

            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CategoryName)
                    </dd>
                    <dt class="col-sm-2">
                        Image
                    </dt>
                    <dd class="col-sm-10">
                        <img src="~/CategoryImg/@Model.ImageUrl" style="width:60px">
                    </dd>
                </dl>
            </div>
            <div class="form-group text-end mt-3">
                <a asp-action="Index" class="btn btn-sm font-sm rounded btn-brand">Back to List</a>
                <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-sm font-sm rounded btn-brand">Edit</a>

            </div>
        </div>
    </div>
</div>