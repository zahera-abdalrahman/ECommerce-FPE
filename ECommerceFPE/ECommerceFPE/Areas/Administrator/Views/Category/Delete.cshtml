@model ECommerceFPE.Models.Category

@{
    ViewData["Title"] = "Delete";
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="pagetitle">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Home</a></li>
                        <a class="breadcrumb-item" asp-action="Index" asp-controller="ProductCategory">Product Category</a>
                        <a class="breadcrumb-item active" asp-action="Delete" asp-controller="ProductCategory">Delete</a>
                    </ol>
                </nav>
            </div>
            <h3>Are you sure you want to delete this?</h3>
            <div>

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CategoryName)
                    </dd>
                    <dt class="col-sm-2">
                        Image
                    </dt>
                    <dd class="col-sm-10">
                        <img src="~/CategoryImg/@Model.ImageUrl" style="width:60px">
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="CategoryId" />
                    <div class="text-end mt-3">
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm font-sm rounded" />
                        <a asp-action="Index" class="btn btn-brand btn-sm font-sm rounded">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
