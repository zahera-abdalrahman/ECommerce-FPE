@model ECommerceFPE.Models.ViewModels.CategoryModel

@{
    ViewData["Title"] = "Create";
}



<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="pagetitle">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Home</a></li>
                        <a class="breadcrumb-item" asp-action="Index" asp-controller="ProductCategory">Product Category</a>
                        <a class="breadcrumb-item active" asp-action="Create" asp-controller="ProductCategory">Create</a>
                    </ol>
                </nav>
            </div>
            <form class="row g-3" asp-action="Create" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-12">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group mt-3">
                                <label asp-for="CategoryName" class="control-label"></label>
                                <input asp-for="CategoryName" class="form-control" />
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageUrl" class="control-label"></label>
                                <input asp-for="File" class="form-control" type="file" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3 text-end">
                                <a asp-action="Index" class="btn btn-primary">Back to List</a>
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
